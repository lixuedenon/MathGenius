<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/activity_calculus.xml -->
<!-- XML Layout File - Calculus Activity Layout -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- 表达式显示区 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:padding="@dimen/spacing_medium"
            android:gravity="end|center_vertical"
            android:textSize="28sp"
            android:textColor="@color/text_primary_light"
            android:fontFamily="sans-serif-medium"
            android:hint="@string/keyboard_display_hint"
            android:textColorHint="@color/text_secondary_light" />

    </com.google.android.material.card.MaterialCardView>

    <!-- 键盘区域 -->
    <ScrollView
        android:id="@+id/scroll_keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/card_display"
        app:layout_constraintBottom_toTopOf="@id/layout_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/grid_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="7"
                android:rowCount="4"
                android:useDefaultMargins="false" />

        </LinearLayout>

    </ScrollView>

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:id="@+id/layout_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 退格和清除按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_small">

            <Button
                android:id="@+id/btn_backspace"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/btn_backspace"
                android:textSize="18sp"
                android:backgroundTint="@color/button_secondary" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/keyboard_clear"
                android:textSize="16sp"
                android:backgroundTint="@color/button_secondary" />

        </LinearLayout>

        <!-- 微分计算按钮 -->
        <Button
            android:id="@+id/btn_derivative"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:text="@string/btn_calculate_derivative"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary" />

        <!-- 积分计算按钮 -->
        <Button
            android:id="@+id/btn_integral"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/btn_calculate_integral"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/secondary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>