<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/item_module_card.xml -->
<!-- XML Layout File - Module Card Item Layout -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_module"
    android:layout_width="match_parent"
    android:layout_height="@dimen/module_card_height"
    android:layout_margin="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_medium">

        <ImageView
            android:id="@+id/iv_module_icon"
            android:layout_width="@dimen/module_icon_size"
            android:layout_height="@dimen/module_icon_size"
            android:contentDescription="@string/module_icon"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tv_module_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_primary_light"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_module_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_secondary_light"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>