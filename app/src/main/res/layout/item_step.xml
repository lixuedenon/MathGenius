<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/item_step.xml -->
<!-- XML Layout File - Calculation Step Item Layout -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium">

        <!-- Step Number -->
        <TextView
            android:id="@+id/tv_step_number"
            android:layout_width="@dimen/step_number_size"
            android:layout_height="@dimen/step_number_size"
            android:gravity="center"
            android:background="@drawable/bg_step_number"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium" />

        <!-- Step Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_medium">

            <TextView
                android:id="@+id/tv_step_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_step_expression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:fontFamily="monospace"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_step_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:textColor="@color/text_secondary_light"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Expand Icon -->
        <ImageView
            android:id="@+id/iv_expand_icon"
            android:layout_width="@dimen/step_icon_size"
            android:layout_height="@dimen/step_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_expand_more"
            android:contentDescription="@string/expand"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>