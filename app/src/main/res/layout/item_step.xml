<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/item_step.xml -->
<!-- Layout XML - Calculation Step Item for RecyclerView -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <LinearLayout
            android:id="@+id/layout_main_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/txt_step_number"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/bg_step_number"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_medium"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_step_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/text_primary_light" />

                <TextView
                    android:id="@+id/txt_step_explanation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_secondary_light" />

                <TextView
                    android:id="@+id/txt_step_expression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="monospace"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/primary" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_expand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_expand_more"
                android:contentDescription="@string/expand"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_substeps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="48dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>