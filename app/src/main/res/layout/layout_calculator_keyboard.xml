<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/layout_calculator_keyboard.xml -->
<!-- XML Layout File - Calculator Keyboard Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?attr/colorSurface">

    <!-- 显示区 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- 表达式显示 -->
            <TextView
                android:id="@+id/tv_expression_display"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="sans-serif-medium"
                android:hint="@string/keyboard_display_hint"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:gravity="end|center_vertical"
                android:minHeight="48dp"/>

            <!-- 退格按钮 -->
            <Button
                android:id="@+id/btn_backspace"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:text="←"
                android:textSize="20sp"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/primary"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 按键区域 -->
    <GridLayout
        android:id="@+id/grid_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="5"
        android:useDefaultMargins="false">

        <!-- Row 1: 7 8 9 ÷ sin cos tan -->
        <Button
            android:id="@+id/btn_7"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="7"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_8"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="8"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_9"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_divide"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="÷"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_sin"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="sin"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/btn_cos"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="cos"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/btn_tan"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="tan"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <!-- Row 2: 4 5 6 × ln exp log -->
        <Button
            android:id="@+id/btn_4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="4"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_5"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="5"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_6"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="6"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_multiply"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="×"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_ln"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="ln"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/btn_exp"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="exp"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/btn_log"
            android:layout_row="1"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="log"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <!-- Row 3: 1 2 3 - x² xⁿ √ -->
        <Button
            android:id="@+id/btn_1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="1"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_2"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="2"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_3"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="3"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_subtract"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="-"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_power2"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="x²"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/btn_power_n"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="xⁿ"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/btn_sqrt"
            android:layout_row="2"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="√"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <!-- Row 4: 0 . x + ( ) π -->
        <Button
            android:id="@+id/btn_0"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_decimal"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="."
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_x"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="x"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="+"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_left_paren"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="("
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_right_paren"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text=")"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary_light"/>

        <Button
            android:id="@+id/btn_pi"
            android:layout_row="3"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="π"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <!-- Row 5: Clear and Confirm -->
        <Button
            android:id="@+id/btn_clear"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="@string/keyboard_clear"
            android:textSize="16sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="@string/keyboard_confirm_calculate"
            android:textSize="16sp"/>

    </GridLayout>

</LinearLayout>