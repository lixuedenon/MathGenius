<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mathgenius.calculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme_MathGenius_Light">

        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".ui.home.HomeActivity"
            android:exported="false" />

        <!-- Calculus Activity -->
                <activity
                    android:name=".ui.calculus.CalculusActivity"
                    android:label="@string/module_calculus"
                    android:parentActivityName=".ui.home.HomeActivity"
                    android:screenOrientation="portrait" />

                <!-- Result Activity -->
                <activity
                    android:name=".ui.result.ResultActivity"
                    android:label="@string/result"
                    android:parentActivityName=".ui.calculus.CalculusActivity"
                    android:screenOrientation="portrait" />

    </application>

</manifest>